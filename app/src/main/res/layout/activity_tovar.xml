<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tovar">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заполнени ведомости"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="67dp" />

    <EditText
        android:id="@+id/NameT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="Наименование товара"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/KodT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/KodT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Код товара"
        android:inputType="number"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/CenaT"
        app:layout_constraintEnd_toEndOf="@+id/NameT"
        app:layout_constraintStart_toStartOf="@+id/NameT"
        app:layout_constraintTop_toBottomOf="@+id/NameT" />

    <EditText
        android:id="@+id/CenaT"
        android:layout_width="253dp"
        android:layout_height="46dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="66dp"
        android:ems="10"
        android:hint="Цена товара (тыс. руб.)"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/add_Tback"
        app:layout_constraintEnd_toEndOf="@+id/KodT"
        app:layout_constraintStart_toStartOf="@+id/KodT"
        app:layout_constraintTop_toBottomOf="@+id/KodT" />

    <Button
        android:id="@+id/add_Tback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="132dp"
        android:text="Добавить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CenaT" />
</androidx.constraintlayout.widget.ConstraintLayout>